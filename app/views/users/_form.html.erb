
<%= form_with model: @user do |user| %>
  <div class="form-group">
    <label for="exampleInputEmail1">Nome</label>
    <%= user.text_field :name, class: 'form-control' %>
    <small id="emailHelp" class="form-text text-muted">Nome completo</small>
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Usuário</label>
    <%= user.text_field :username, class: 'form-control' %>
    <small id="emailHelp" class="form-text text-muted">Nome de usuário</small>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">E-mail</label>
    <%= user.text_field :email, class: 'form-control', type: 'email' %>
    <small id="emailHelp" class="form-text text-muted">E-mail válido</small>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Senha</label>
    <%= user.text_field :password, class: 'form-control', type: 'password' %>
    <small id="emailHelp" class="form-text text-muted">Senha</small>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Confirmação de senha</label>
    <%= user.text_field :password_confirmation, class: 'form-control', type: 'password' %>
    <small id="emailHelp" class="form-text text-muted">Confirmação de senha</small>
  </div>
  <%= user.submit 'Salvar', class: 'btn btn-primary' %>
<% end %>